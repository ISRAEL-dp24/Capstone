<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_light">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Header Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="How can we help you?"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/parkspot_dark_green"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp" />

        <!-- Main Visual Card with Support Rep and Icons -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="24dp"
                android:background="@color/white"
                android:gravity="center">

                <!-- Support Representative Icon/Image Placeholder -->
                <ImageView
                    android:id="@+id/supportRepImage"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@android:drawable/ic_menu_help"
                    android:contentDescription="Support Representative"
                    android:background="@drawable/ic_launcher_background"
                    android:padding="16dp"
                    android:layout_marginBottom="16dp" />

                <!-- Four Category Icons in Grid -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="16dp">

                    <!-- Overstay Icon -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="8dp">
                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@android:drawable/ic_menu_myplaces"
                            android:tint="@color/parkspot_green"
                            android:contentDescription="Overstay" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Overstay"
                            android:textSize="12sp"
                            android:textColor="@color/parkspot_dark_green"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>

                    <!-- Navigation Icon -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="8dp">
                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@android:drawable/ic_menu_mylocation"
                            android:tint="@color/parkspot_green"
                            android:contentDescription="Navigation" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Navigation"
                            android:textSize="12sp"
                            android:textColor="@color/parkspot_dark_green"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>

                    <!-- Booking Icon -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="8dp">
                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@android:drawable/ic_menu_view"
                            android:tint="@color/parkspot_green"
                            android:contentDescription="Booking" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Booking"
                            android:textSize="12sp"
                            android:textColor="@color/parkspot_dark_green"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>

                    <!-- Payments Icon -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="8dp">
                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@android:drawable/ic_menu_sort_by_size"
                            android:tint="@color/parkspot_green"
                            android:contentDescription="Payments" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Payments"
                            android:textSize="12sp"
                            android:textColor="@color/parkspot_dark_green"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- "We're here to help!" Text -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="We're here to help! ParkSpot"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/parkspot_dark_green"
                    android:gravity="center"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp" />

                <!-- Support Options -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Contact Support • Live Chat • FAQ • Report an Issue"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:gravity="center" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- "What do you need help with?" Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="What do you need help with?"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="16dp" />

        <!-- Help Topics Cards -->
        <!-- Overstay Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:text="ℹ"
                        android:textSize="20sp"
                        android:textColor="@color/parkspot_green"
                        android:gravity="center"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Overstay"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="36dp"
                    android:layout_marginTop="8dp"
                    android:text="ParkSpot applies a grace period and allows you to review charges. You can request extensions or dispute incorrect overstays from your booking history."
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:lineSpacingMultiplier="1.2" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Navigation Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:text="ℹ"
                        android:textSize="20sp"
                        android:textColor="@color/parkspot_green"
                        android:gravity="center"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Navigation"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="36dp"
                    android:layout_marginTop="8dp"
                    android:text="Having trouble finding your parking spot? Use direct navigation links via GPS. Check your device location settings or contact support if directions are incorrect."
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:lineSpacingMultiplier="1.2" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Booking Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:text="ℹ"
                        android:textSize="20sp"
                        android:textColor="@color/parkspot_green"
                        android:gravity="center"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Booking"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="36dp"
                    android:layout_marginTop="8dp"
                    android:text="Need help with reservations? Edit, cancel, or view booking details. If your spot is unavailable, contact support for troubleshooting."
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:lineSpacingMultiplier="1.2" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Payments Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:text="ℹ"
                        android:textSize="20sp"
                        android:textColor="@color/parkspot_green"
                        android:gravity="center"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Payments"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="36dp"
                    android:layout_marginTop="8dp"
                    android:text="Payments are processed securely through trusted partners. Report failed, duplicated, or unreflected transactions for review."
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:lineSpacingMultiplier="1.2" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Support Community Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:text="ℹ"
                        android:textSize="20sp"
                        android:textColor="@color/parkspot_green"
                        android:gravity="center"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Support Community"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="36dp"
                    android:layout_marginTop="8dp"
                    android:text="Provide feedback, ask questions, or discuss issues not listed. Connect with our support team for personalized help. We continuously improve based on community input."
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:lineSpacingMultiplier="1.2" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Contact Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:orientation="vertical"
                android:padding="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Contact us!"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/parkspot_dark_green"
                    android:layout_marginBottom="16dp" />

                <!-- Email -->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_dialog_email"
                        android:tint="@color/parkspot_green"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:id="@+id/textViewEmail"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Email: groupdias.parking@gmail.com"
                        android:textSize="16sp"
                        android:textColor="@color/parkspot_green"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackground" />
                </LinearLayout>

                <!-- Phone -->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_menu_call"
                        android:tint="@color/parkspot_green"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:id="@+id/textViewPhone"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Phone: +1 (234) 567-8910"
                        android:textSize="16sp"
                        android:textColor="@color/parkspot_green"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackground" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Social Media Icons -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="32dp">

            <ImageView
                android:id="@+id/iconTwitter"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@android:drawable/ic_menu_share"
                android:tint="@color/text_secondary"
                android:layout_marginEnd="16dp"
                android:contentDescription="Twitter" />

            <ImageView
                android:id="@+id/iconInstagram"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@android:drawable/ic_menu_camera"
                android:tint="@color/text_secondary"
                android:layout_marginEnd="16dp"
                android:contentDescription="Instagram" />

            <ImageView
                android:id="@+id/iconYouTube"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@android:drawable/ic_media_play"
                android:tint="@color/text_secondary"
                android:layout_marginEnd="16dp"
                android:contentDescription="YouTube" />

            <ImageView
                android:id="@+id/iconLinkedIn"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@android:drawable/ic_menu_agenda"
                android:tint="@color/text_secondary"
                android:contentDescription="LinkedIn" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
